{% extends 'base.html.twig' %}

{% block title %}
    Liste des films
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            {% for popularMovies in movies %}
                {% for result in popularMovies %}
                    <div class="col-md-3">

                        <div class="card border-danger mb-3" style="max-width: 20rem;">
                            <div class="card-header">{{ result.title }}</div>
                            <div class="card-body">
                                <img src="https://image.tmdb.org/t/p/w500/{{ result.poster_path}}" width="200">
                            </div>
                        </div>
                    </div>

                {% endfor %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
